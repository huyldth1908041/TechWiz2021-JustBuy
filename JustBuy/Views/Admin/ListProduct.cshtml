@model IEnumerable<JustBuy.Models.Product>

@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section pageStyles {

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin/assets/vendor/datatables/css/dataTables.bootstrap4.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin/assets/vendor/datatables/css/buttons.bootstrap4.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin/assets/vendor/datatables/css/select.bootstrap4.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin/assets/vendor/datatables/css/fixedHeader.bootstrap4.css")">

}
<h2>
    LIST PRODUCTS
</h2>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            @*<h5 class="card-header">Basic Table</h5>*@
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>

                                <th>
                                    Cover
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th>
                                    Launche Date
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>Actions</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="text-align: center">
                                    <td class="center p-l-20">
                                        @item.Id
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        <img src="@item.GetSmallImage()" alt="Alternate Text" />
                                    </td>

                                    <td>
                                        @item.Price.ToString("C2")
                                    </td>


                                    <td>
                                        @item.LaunchDate.ToString("MM/dd/yyyy")
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </th>
                                    <td>
                                        @if (item.Status == JustBuy.Models.Product.ProductStatus.Active)
                                        {
                                            <form action="@Url.Action("ToggleProductStatus", new { id = item.Id})" method="post">
                                                <button type="submit" class="btn btn-danger">Disable</button>
                                            </form>

                                        }
                                        else
                                        {
                                            <form action="@Url.Action("ToggleProductStatus", new { id = item.Id})" method="post">
                                                <button type="submit" class="btn btn-primary">Active</button>
                                            </form>
                                        }

                                    </td>
                                </tr>
                            }
                        </tbody>
                        @*<tfoot>
                                <tr>
                                    <th>Quantity</th>
                                    <th>Total Price</th>
                                    <th>Status</th>
                                    <th>Created At</th>
                                    <th>Updated At</th>
                                </tr>
                            </tfoot>*@
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<button id="filter">Filter</button>

