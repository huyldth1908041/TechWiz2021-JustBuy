@model IEnumerable<JustBuy.Models.Product>

@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>
    LIST PENDING VEHICLE
</h2>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            @*<h5 class="card-header">Basic Table</h5>*@
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Model
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Color)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cover)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SalePrice)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Assets)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedAt)
                                </th>

                                <th>Actions</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="text-align: center">
                                    <td class="center p-l-20">
                                        @item.Id
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VehicleModel.ModelNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Color)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        <img src="@item.GetSmallImage()" alt="Alternate Text" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SalePrice)
                                    </td>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Assets)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedAt)
                                    </td>

                                    <td>
                                        <a href="@Url.Action("ManageVehicleDetail", new { id = item.Id})" class="btn btn-primary">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        @*<tfoot>
                                <tr>
                                    <th>Quantity</th>
                                    <th>Total Price</th>
                                    <th>Status</th>
                                    <th>Created At</th>
                                    <th>Updated At</th>
                                </tr>
                            </tfoot>*@
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


