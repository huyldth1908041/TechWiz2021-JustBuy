<!-- Start page content -->
<section id="page-content" class="page-wrapper">

    <!-- SHOP SECTION START -->
    <div class="shop-section mb-80">
        <div class="container">
            <div class="row">
                <div class="col-md-2 col-sm-12">
                    <ul class="cart-tab">
                        <li>
                            <a class="active" href="@Url.Action("ListOrderDetail")">
                                <span>01</span>
                                Shopping cart
                            </a>
                        </li>

                        <li>
                            <a href="#checkout" class="active">
                                <span>02</span>
                                Checkout
                            </a>
                        </li>
                        <li>
                            <a href="#disable" >
                                <span>03</span>
                                Order complete
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-10 col-sm-12">
                    <!-- Tab panes -->
                    <div class="tab-content">

                        <!-- checkout start -->
                        <div class="tab-pane active" id="checkout">
                            <div class="checkout-content box-shadow p-30">
                                <form action="@Url.Action("Checkout", new { id = Model.Order.Id})" method="post">
                                    <div class="row">
                                        <!-- billing details -->
                                        <div class="col-md-6">
                                            <div class="billing-details pr-10">
                                                <h6 class="widget-title border-left mb-20">billing details</h6>
                                             
                                                <input type="text" placeholder="Your Name Here..." value="@Model.AppUser.FullName" name="fullName" required>
                                                <input type="text" placeholder="Email address here..." value="@Model.AppUser.Email" name="email" required>
                                                <input type="text" placeholder="Phone here..." value="@Model.AppUser.Phone" name="phone" required>


                                                <textarea class="custom-textarea" placeholder="Your address here..." name="address" required>@Model.AppUser.Address</textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <!-- our order -->
                                            <div class="payment-details pl-10 mb-50">
                                                <h6 class="widget-title border-left mb-20">our order</h6>
                                                <table>
                                                    @foreach (var item in Model.Order.OrderDetails.ToList())
                                                    {
                                                        <tr>
                                                            <td class="td-title-1">@item.Product.Name x @item.Quantity</td>
                                                            <td class="td-title-2">@item.SalePrice.ToString("C2")</td>
                                                        </tr>
                                                    }

                                                    
                                                    <tr>
                                                        <td class="td-title-1">Shipping and Handling</td>
                                                        <td class="td-title-2">@Model.Order.ShippingFee.ToString("C2")</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="order-total">Order Total</td>
                                                        <td class="order-total-price">@Model.Order.TotalPrice.ToString("C2")</td>
                                                    </tr>
                                                </table>
                                            </div>
                                            <!-- payment-method -->
                                            <div class="payment-method">
                                                <h6 class="widget-title border-left mb-20">payment method</h6>
                                                
                                                    @Html.EnumDropDownListFor(model => model.Order.PaymentMethod, new { style = "width: 100%", Name="PaymemtMethod"})
                                        
                                          
                                            </div>
                                            <!-- payment-method end -->
                                            <button class="submit-btn-1 mt-30 btn-hover-1" type="submit">place order</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- checkout end -->
                        <!-- order-complete start -->
                        <div class="tab-pane" id="order-complete">
                            <div class="order-complete-content box-shadow">
