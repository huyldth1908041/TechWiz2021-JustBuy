@model JustBuy.Models.FeedBack
@{
    ViewBag.Title = "Contact";
}

<!-- BREADCRUMBS SETCTION START -->
<div class="breadcrumbs-section plr-200 mb-80">
    <div class="breadcrumbs overlay-bg">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="breadcrumbs-inner">
                        <h1 class="breadcrumbs-title">Contact</h1>
                        <ul class="breadcrumb-list">
                            <li><a href=@Url.Content("~/Home/Index")>Home</a></li>
                            <li>Contact</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMBS SETCTION END -->
<!-- Start page content -->
<section id="page-content" class="page-wrapper">

    <!-- ADDRESS SECTION START -->
    <div class="address-section mb-80">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-xs-12">
                    <div class="contact-address box-shadow">
                        <i class="zmdi zmdi-pin"></i>
                        <h6>8A Ton That Thuyet, My Dinh, Cau Giay,</h6>
                        <h6>Ha Noi, Vietnam</h6>
                    </div>
                </div>
                <div class="col-sm-4 col-xs-12">
                    <div class="contact-address box-shadow">
                        <i class="zmdi zmdi-phone"></i>
                        <h6>(+880) 1945 082759</h6>
                        <h6>(+880) 1945 082759</h6>
                    </div>
                </div>
                <div class="col-sm-4 col-xs-12">
                    <div class="contact-address box-shadow">
                        <i class="zmdi zmdi-email"></i>
                        <h6>justbuycompany@gmail.com</h6>
                        <h6>info@justbuy.com</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ADDRESS SECTION END -->
    <!-- MESSAGE BOX SECTION START -->
    <div class="message-box-section mt--50 mb-80">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="message-box box-shadow white-bg">
                        @using (Html.BeginForm("FeedBack", "Home", "Post"))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>FeedBack</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                <div class="col-md-12">
                                    <h4 class="blog-section-title border-left mb-30">Send us Feedback</h4>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" name="name" placeholder="Your name here">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" name="email" placeholder="Your email here">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" name="subject" placeholder="Subject here">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" name="phone" placeholder="Your phone here">
                                </div>
                                <div class="col-md-12">
                                    @Html.TextAreaFor(model => model.Content, new { @class = "custom-textarea", placeholder = "Message" })
                                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                                    <button class="submit-btn-1 mt-30 btn-hover-1" type="submit">submit message</button>
                                </div>
                            </div>
                        }
                        <p class="form-messege">@TempData["FeedBackMsq"]</p>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- MESSAGE BOX SECTION END -->
</section>
<!-- End page content -->