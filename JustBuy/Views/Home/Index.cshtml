@model JustBuy.Models.HomePageViewModel
@{
    ViewBag.Title = "Home Page";
}

<!-- START SLIDER AREA -->
<div class="slider-area  plr-185  mb-80">
    <div class="container-fluid">
        <div class="slider-content">
            <div class="row">
                <div class="active-slider-1 slick-arrow-1 slick-dots-1">
                    @foreach (var item in Model.TopThreeNewestProducts)
                    {
                        <!-- layer-1 Start -->
                        <div class="col-md-12">
                            <div class="layer-1">
                                <div class="slider-img">
                                    <img src="@item.GetAllImages().FirstOrDefault()" alt="">
                                </div>
                                <div class="slider-info gray-bg">
                                    <div class="slider-info-inner">
                                        <h1 class="slider-title-1 text-uppercase text-black-1">@item.Name</h1>
                                        <div class="slider-brief text-black-2">
                                            <p>@item.Description</p>
                                        </div>
                                        <a href="/Product/Detail/@item.Id" class="button extra-small button-black">
                                            <span class="text-uppercase">Buy now</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- layer-1 end -->
                    }

                </div>
            </div>
        </div>
    </div>
</div>
<!-- END SLIDER AREA -->
<!-- Start page content -->
<section id="page-content" class="page-wrapper">

    <!-- BY BRAND SECTION START-->
    <div class="by-brand-section mb-80">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title text-left mb-40">
                        <h2 class="uppercase">By Categories</h2>
                        <h6>There are many variations of passages of categories available,</h6>
                    </div>
                </div>
            </div>
            <div class="by-brand-product">
                <div class="row active-by-brand slick-arrow-2">
                    @foreach (var item in Model.Categories)
                    {
                        <!-- single-brand-product start -->
                        <div class="col-xs-12">
                            <div class="single-brand-product">
                                <a href="/Product/Detail/@item.Id"><img src="@item.GetAllCover().FirstOrDefault()" alt=""></a>
                                <h3 class="brand-title text-gray" style="background-color: #fff;">
                                    <a href="/Product/Detail/@item.Id">@item.Name</a>
                                </h3>
                            </div>
                        </div>
                        <!-- single-brand-product end -->
                    }


                </div>
            </div>
        </div>
    </div>
    <!-- BY BRAND SECTION END -->
    <!-- FEATURED PRODUCT SECTION START -->
    <div class="featured-product-section mb-50">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title text-left mb-40">
                        <h2 class="uppercase">Featured product</h2>
                        <h6>There are many variations of passages of brands available,</h6>
                    </div>
                </div>
            </div>
            <div class="featured-product">
                <div class="row active-featured-product slick-arrow-2">
                    @foreach (var item in Model.TopFiveNewestProduct)
                    {
                        <!-- product-item start -->
                        <div class="col-xs-12">
                            <div class="product-item">
                                <div class="product-img">
                                    <a href="/Product/Detail/@item.Id">
                                        <img src="@item.GetAllImages().FirstOrDefault()" alt="" />
                                    </a>
                                </div>
                                <div class="product-info">
                                    <h6 class="product-title">
                                        <a href="/Product/Detail/@item.Id">@item.Name</a>
                                    </h6>
                                    <div class="pro-rating">
                                        <a href="#"><i class="zmdi zmdi-star"></i></a>
                                        <a href="#"><i class="zmdi zmdi-star"></i></a>
                                        <a href="#"><i class="zmdi zmdi-star"></i></a>
                                        <a href="#"><i class="zmdi zmdi-star-half"></i></a>
                                        <a href="#"><i class="zmdi zmdi-star-outline"></i></a>
                                    </div>
                                    <h3 class="pro-price">$ @item.Price</h3>
                              
                                </div>
                            </div>
                        </div>
                        <!-- product-item end -->
                    }

                   
                </div>
            </div>
        </div>
    </div>
    <!-- FEATURED PRODUCT SECTION END -->

</section>
<!-- End page content -->